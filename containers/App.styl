
sidebar-width = 200px

#app, body
  padding: 0
  margin: 0
  width: 100%
  height: 100%

*
  margin: 0
  padding: 0

main
  width: 100%
  font-family: sans-serif
  font-size: 12px

  content
    width: 100%
    display: flex
    flex-direction: row

    section
      padding: 20px
      height: calc(100% - 40px)

    .sidebar-container
      flex-basis: sidebar-width
      padding-right: 10px

    .calendar-container
      flex-grow: 1
      padding-left: 10px
