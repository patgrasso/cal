
@import "../_constants"

.calendar-checkbox
  cursor: pointer

  *
    vertical-align: middle

  &:hover
    background-color: verylightgray
    .checkbox
      background-color: default
    

.checkbox
  width: 15px
  height: 15px
  background-color: transparent
  display: inline-block
  margin: 2px;
  border: 2px solid lightgray
  border-radius: 3px

  &.off
    background-color: transparent