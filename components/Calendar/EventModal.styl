
@import "../_constants"

.event-modal
  position: absolute
  top: 0
  bottom: 0
  left: 0
  right: 0

.event-modal-body
  position: absolute
  top: 50%
  left: 50%
  transform: translate(-50%, -50%)
  width: 50%
  height: 50%
  min-height: 300px
  z-index: 100
  padding: 20px
  outline: none

  background-color: default
  border: 1px solid rgba(0, 0, 0, 0.2)
  border-radius: 3px
  font-family: 'sans-serif'

  input, textarea
    font-family: 'sans-serif'
    background-color: transparent
    border: none
    border-bottom: 2px solid rgba(0, 0, 0, 0.2)
    outline: none
    resize: none

  .event-title
    margin-bottom: 10px
    font-size: 20px

  .event-detail
    font-size: 14px
    margin-bottom: 10px
    display: table
    width: 100%

    label
      display: table-cell
      vertical-align: top
      width: 120px

    input, textarea
      display: table-cell
      font-size: 14px
      width: 100%

  .event-action-container
    position: absolute
    bottom: 20px
    right: 20px

  .event-action
    background-color: rgba(0, 0, 0, 0.1)

  .Select-menu-outer
    overflow: hidden

