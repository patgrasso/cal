
json('../constants.json')
@import '../colors'

.time-block
  position: absolute
  border: 1px solid rgba(0, 0, 0, 0.2)
  width: 95%
  z-index: 5
  overflow-y: hidden
  user-select: none
  cursor: default
  opacity: 0.7
  background: repeating-linear-gradient(
    -45deg,
    red500,
    red500 15px,
    red600 15px,
    red600 20px
    )

  &:hover
    opacity: 1
    cursor: pointer
    

