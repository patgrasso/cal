
.modal
  position: absolute
  top: 0
  bottom: 0
  left: 0
  right: 0

.modal-body
  position: absolute
  top: 50%
  left: 50%
  transform: translate(-50%, -50%)
  width: 50%
  height: fit-content
  min-height: fit-content
  z-index: 100
  padding: 20px
  outline: none
  padding-bottom: 70px

  background-color: #fff
  border: 1px solid rgba(0, 0, 0, 0.2)
  border-radius: 3px
  font-family: 'Roboto', sans-serif

  .modal-actions
    position: absolute
    bottom: 20px
    right: 20px

  .modal-action
    background-color: rgba(0, 0, 0, 0.1)

  h1, h2, h3
    margin-bottom: 15px
