
json('../constants.json')
@import '../colors'

.calendar-day
  position: relative
  border-right: 1px solid grey300
  height: unit(hourCellHeight*24, px)
  cursor: default

  background-image: linear-gradient(to right, #fff 1px, transparent 2px),
                    linear-gradient(to top, grey300 1px, transparent 1px)
  background-size: 3px unit(hourCellHeight*0.5, px)
  overflow: hidden;

  &:last-of-type, &:first-of-type
    border: none

  &:after
    position: absolute
    content: ''
    height: 100%
    width: 100%
    background-image: linear-gradient(to top, grey300 1px, transparent 1px)
    background-size: 1px unit(hourCellHeight, px)

  &.today
    background-color: #eee
    background-image: linear-gradient(to right, #eee 1px, transparent 2px),
                      linear-gradient(to top, grey300 1px, transparent 1px)

.calendar-day, .calendar-day-header
  flex-basis: 100%
  flex-grow: 1
  flex-shrink: 1
  position: relative

.calendar-day-header
  height: unit(dayHeaderHeight, px)
  text-align: center

.current-time-marker
  position: absolute
  height: 2px
  width: 100%
  background-color: red
  z-index: 10
