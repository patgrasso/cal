
@import '../colors'

.dt-picker
  >div
    display: inline-block
    margin-right: 10px
    position: relative

  button
    height: 25px
    width: 25px
    padding: 5px
    margin: 0
    vertical-align: middle
    border-top-right-radius: 0
    border-bottom-right-radius: 0

  .value
    height: 25px
    padding: 0 5px
    vertical-align: middle
    line-height: 25px
    display: inline-block
    cursor: default
    background-color: #fff
    border-top-right-radius: 3px
    border-bottom-right-radius: 3px

  .dt-date-picker,
  .dt-time-picker
    position: absolute
    z-index: 100
    top: 30px
    box-shadow: 0 5px 10px 4px rgba(0, 0, 0, 0.2)
    border-radius: 3px
    user-select: none
    background-color: #fff

    header
      height: 50px
      background-color: bg-primary
      color: fg-primary-blur
      border-top-left-radius: 3px
      border-top-right-radius: 3px

      .active
        color: fg-primary

    footer
      float: right
      margin: 5px

      button
        background-color: transparent
        color: bg-primary
        width: auto

